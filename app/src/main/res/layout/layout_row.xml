<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    >

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="10dp"-->
        <!--android:orientation="horizontal">-->

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#eff0f4"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:padding="2.5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/artwork_glee"
        android:scaleType="fitCenter"
        android:id="@+id/ivArtwork" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="7dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/ivArtwork"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My love"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:id="@+id/tvName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by CamCam"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:id="@+id/tvAuthor" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#D9637689" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textSize="12sp"
                    android:paddingLeft="6dp"
                    android:text="1202"
                    android:textColor="#e3e5e8"
                    android:id="@+id/tvLiked" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_music" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:paddingLeft="6dp"
                    android:text="1202"
                    android:textSize="12sp"
                    android:textColor="#e3e5e8"
                    android:id="@+id/tvListened" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_download" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="12sp"
                    android:paddingLeft="6dp"
                    android:text="1202"
                    android:textColor="#e3e5e8"
                    android:id="@+id/tvDownloaded" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_heart"
        android:id="@+id/imageView"
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
         />

    <!--</LinearLayout>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_alignParentBottom="true"
        android:background="#99637689"
        android:id="@+id/textView" />

</RelativeLayout>